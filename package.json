{
  "name": "sketch-align-to-grid",
  "version": "0.0.3",
  "description": "A Sketch plugin to align artboards and layers to a grid",
  "keywords": [
    "plugin",
    "sketch",
    "sketch-plugin-helper"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": "yuanqing/sketch-align-to-grid",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "sph build",
    "fix": "sph lint --fix",
    "lint": "sph lint",
    "symlink": "sph symlink",
    "unlink": "sph symlink --delete",
    "version": "sph version",
    "watch": "sph build --watch"
  },
  "devDependencies": {
    "sketch-plugin-helper": "*"
  },
  "sketch-plugin-helper": {
    "name": "Align to Grid",
    "actions": [
      {
        "action": "LayersMoved.finish",
        "handler": "action"
      },
      {
        "action": "LayersResized.finish",
        "handler": "action"
      }
    ],
    "menu": [
      {
        "handler": "align-artboards-to-canvas-grid/align-artboards-to-canvas-grid",
        "label": "Align Artboards to Canvas Grid"
      },
      {
        "handler": "align-layers-to-artboard-grid/align-layers-to-artboard-grid",
        "label": "Align Layers to Artboard Grid"
      },
      "-",
      {
        "Settings": [
          {
            "handler": "align-artboards-to-canvas-grid/settings",
            "label": "Settings for Canvas Grid"
          },
          {
            "handler": "align-layers-to-artboard-grid/settings",
            "label": "Settings for Artboard Grid"
          },
          "-",
          {
            "handler": "settings/reset-settings",
            "label": "Reset Settings"
          }
        ]
      }
    ],
    "defaultSettings": {
      "alignArtboardsToCanvasGrid": {
        "snapToGrid": false,
        "gridHeight": 200,
        "gridWidth": 200,
        "whitelistRegularExpression": "^@"
      },
      "alignLayersToArtboardGrid": {
        "snapToGrid": false,
        "gridSize": 10,
        "whitelistRegularExpression": "^@"
      }
    }
  }
}
