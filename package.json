{
  "name": "sketch-snap-to-grid",
  "version": "0.0.2",
  "description": "A Sketch plugin to automatically align artboards and layers to a grid",
  "keywords": [
    "plugin",
    "sketch",
    "sketch-plugin-helper"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": "yuanqing/sketch-snap-to-grid",
  "devDependencies": {
    "sketch-plugin-helper": "*"
  },
  "scripts": {
    "build": "sph build",
    "fix": "sph lint --fix",
    "lint": "sph lint",
    "symlink": "sph symlink",
    "unlink": "sph symlink --delete",
    "version": "sph version",
    "watch": "sph build --watch"
  },
  "sketch-plugin-helper": {
    "name": "Snap to Grid",
    "actions": [
      {
        "action": "LayersMoved.finish",
        "handler": "action"
      },
      {
        "action": "LayersResized.finish",
        "handler": "action"
      },
      {
        "action": "Paste.finish",
        "handler": "action"
      }
    ],
    "menu": [
      {
        "handler": "snap-layers-to-grid/snap-layers-to-grid",
        "label": "Snap Layers to Grid"
      },
      {
        "handler": "snap-layers-to-grid/settings",
        "label": "Settings for Snap Layers to Grid"
      },
      "-",
      {
        "handler": "snap-artboards-to-grid/snap-artboards-to-grid",
        "label": "Snap Artboards to Grid"
      },
      {
        "handler": "snap-artboards-to-grid/settings",
        "label": "Settings for Snap Artboards to Grid"
      },
      "-",
      {
        "handler": "reset-settings",
        "label": "Reset Settings"
      }
    ],
    "defaultSettings": {
      "snapArtboardsToGrid.enabled": false,
      "snapArtboardsToGrid.gridHeight": 200,
      "snapArtboardsToGrid.gridWidth": 200,
      "snapArtboardsToGrid.whitelistRegularExpression": "^@",
      "snapLayersToGrid.enabled": false,
      "snapLayersToGrid.gridHeight": 10,
      "snapLayersToGrid.gridWidth": 10,
      "snapLayersToGrid.whitelistRegularExpression": "^@"
    }
  }
}
